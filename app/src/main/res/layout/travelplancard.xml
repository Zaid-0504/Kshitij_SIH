<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:layout_width="340dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3FAFF"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Renowned Surfing Instructors nearby"
            android:textColor="#3D8757"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Distance and Entrance Fee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250 meters"
                android:textColor="#3D8757"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textColor="#3D8757"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/entrance_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 one entrance all day"
                android:textColor="#3D8757"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Features -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="6dp"
                android:background="#F3FAFF">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:contentDescription="Lifeguards" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Lifeguards"
                    android:textSize="14sp"
                    android:textColor="#3D8757" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="6dp"
                android:background="#F3FAFF">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:contentDescription="SPA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="SPA"
                    android:textSize="14sp"
                    android:textColor="#3D8757" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="6dp"
                android:background="#F3FAFF">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:contentDescription="Pool" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Pool"
                    android:textSize="14sp"
                    android:textColor="#3D8757" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>